<UserControl x:Class="BoulderPusherWPF.GameObject.Boulder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoulderPusherWPF.GameObject"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Rectangle x:Name="boulder"
                   Width="50"
                   Height="50">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="/Sprites/Boulder.png"
                    Stretch="Fill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>